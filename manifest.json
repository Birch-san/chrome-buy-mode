{
  "name": "CHANGE THIS : Extension boilerplate",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This Chrome Extension plays The Sims Buy Mode music when you browse Amazon.",
  "homepage_url": "http://birchlabs.co.uk",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": false
  },
  "permissions": [
    "*://*.amazon.co.uk/*",
    "*://*.amazon.com/*",
    "*://*.birchlabs.co.uk/*",
    "*://birchlabs.co.uk/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}